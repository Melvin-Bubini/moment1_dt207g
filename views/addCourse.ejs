<body>
    <header>
        <!-- <a href="index.html"><img id="logo" src="/pictures/standardLogo.svg" alt="Logga"></a> -->
        <a id="logo-text" href="index.html">
            <h3>Moment-3</h3>
        </a>
        <ul id="bigScreenList">
            <li><a class="menyLänkar" href="">Startida</a></li>
            <li><a class="menyLänkar" href="">Kurser</a></li>
            <li><a class="menyLänkar" href="">Om Sidan</a></li>
        </ul>
        <button class="menu-btn open" id="open-menu">
            <span class="menu-icon">
                <span class="bars">Startida</span>
                <span class="bars">Kurser</span>
                <span class="bars">Om Sidan</span>
            </span>
            <span class="menu-text">Meny</span>
        </button>
        <nav id="nav-menu">
            <button class="menu-btn close" id="close-menu">
                <span class="menu-icon">
                    <span class="bars cross1"></span>
                    <span class="bars cross2"></span>
                </span>
